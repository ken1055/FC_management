<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>店舗プロフィール - FC店舗管理システム</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css"
    />
  </head>
  <body class="bg-light">
    <div class="container py-5">
      <nav
        class="navbar navbar-expand-lg navbar-light bg-white mb-4 rounded shadow-sm"
      >
        <div class="container-fluid">
          <a class="navbar-brand fw-bold" href="/">
            <i class="bi bi-shop"></i> FC店舗管理システム
          </a>
          <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <% if (typeof session !== 'undefined' && session && session.user
              && session.user.role === 'admin') { %>
              <li class="nav-item">
                <a class="nav-link" href="/stores/list">店舗一覧</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/sales/list">売上管理</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/groups/list">グループ管理</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/api/users/list">アカウント管理</a>
              </li>
              <% } %> <% if (typeof session !== 'undefined' && session &&
              session.user && session.user.role === 'agency') { %> <% if
              (session.user.store_id) { %>
              <li class="nav-item">
                <a
                  class="nav-link"
                  href="/stores/profile/<%= session.user.store_id %>"
                  >マイプロフィール</a
                >
              </li>
              <% } %>
              <li class="nav-item">
                <a class="nav-link" href="/sales/list">売上管理</a>
              </li>
              <% } %> <% if (typeof session !== 'undefined' && session &&
              session.user) { %>
              <li class="nav-item">
                <a class="nav-link" href="/auth/logout">ログアウト</a>
              </li>
              <% } else { %>
              <li class="nav-item">
                <a class="nav-link" href="/auth/login">ログイン</a>
              </li>
              <% } %>
            </ul>
          </div>
        </div>
      </nav>

      <div class="card shadow-sm mb-4">
        <div
          class="card-header bg-primary text-white d-flex justify-content-between align-items-center"
        >
          <h1 class="mb-0">
            <i class="bi bi-shop"></i> <%= agency.name %>のプロフィール
          </h1>
          <div>
            <a
              href="/stores/profile/<%= agency.id %>/edit"
              class="btn btn-light"
            >
              <i class="bi bi-pencil"></i> 編集
            </a>
            <% if (session.user.role === 'admin') { %>
            <a href="/stores/list" class="btn btn-outline-light ms-2">
              <i class="bi bi-arrow-left"></i> 一覧へ戻る
            </a>
            <% } %>
          </div>
        </div>
      </div>

      <!-- 店舗基本情報 -->
      <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0"><i class="bi bi-shop"></i> 店舗基本情報</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <table class="table table-borderless">
                <tr>
                  <th class="text-muted" style="width: 40%">店舗ID</th>
                  <td><%= agency.id %></td>
                </tr>
                <tr>
                  <th class="text-muted">店舗名</th>
                  <td><%= agency.name %></td>
                </tr>
                <tr>
                  <th class="text-muted">店長氏名</th>
                  <td><%= agency.manager_name || '未設定' %></td>
                </tr>
                <tr>
                  <th class="text-muted">営業所住所</th>
                  <td><%= agency.business_address || '未設定' %></td>
                </tr>
              </table>
            </div>
            <div class="col-md-6">
              <table class="table table-borderless">
                <tr>
                  <th class="text-muted" style="width: 40%">代表電話</th>
                  <td><%= agency.main_phone || '未設定' %></td>
                </tr>
                <tr>
                  <th class="text-muted">携帯電話</th>
                  <td><%= agency.mobile_phone || '未設定' %></td>
                </tr>
                <tr>
                  <th class="text-muted">代表メール</th>
                  <td><%= agency.representative_email || '未設定' %></td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!-- 契約基本情報 -->
      <div class="card mb-4 shadow-sm">
        <div class="card-header bg-success text-white">
          <h5 class="mb-0">
            <i class="bi bi-file-earmark-text"></i> 契約基本情報
          </h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-4">
              <table class="table table-borderless">
                <tr>
                  <th class="text-muted">契約形態</th>
                  <td><%= agency.contract_type || '未設定' %></td>
                </tr>
              </table>
            </div>
            <div class="col-md-4">
              <table class="table table-borderless">
                <tr>
                  <th class="text-muted">契約開始日</th>
                  <td><%= agency.contract_start_date || '未設定' %></td>
                </tr>
              </table>
            </div>
            <div class="col-md-4">
              <table class="table table-borderless">
                <tr>
                  <th class="text-muted">ロイヤリティ率</th>
                  <td><%= agency.royalty_rate || '5.0' %>%</td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!-- 請求基本情報 -->
      <div class="card mb-4 shadow-sm">
        <div class="card-header bg-warning text-dark">
          <h5 class="mb-0"><i class="bi bi-credit-card"></i> 請求基本情報</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <table class="table table-borderless">
                <tr>
                  <th class="text-muted">インボイス登録番号</th>
                  <td><%= agency.invoice_number || '未設定' %></td>
                </tr>
                <tr>
                  <th class="text-muted">銀行名</th>
                  <td><%= agency.bank_name || '未設定' %></td>
                </tr>
                <tr>
                  <th class="text-muted">支店名</th>
                  <td><%= agency.branch_name || '未設定' %></td>
                </tr>
              </table>
            </div>
            <div class="col-md-6">
              <table class="table table-borderless">
                <tr>
                  <th class="text-muted">口座種別</th>
                  <td><%= agency.account_type || '未設定' %></td>
                </tr>
                <tr>
                  <th class="text-muted">口座番号</th>
                  <td><%= agency.account_number || '未設定' %></td>
                </tr>
                <tr>
                  <th class="text-muted">口座名義</th>
                  <td><%= agency.account_holder || '未設定' %></td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!-- 許認可情報 -->
      <div class="card mb-4 shadow-sm">
        <div class="card-header bg-info text-white">
          <h5 class="mb-0"><i class="bi bi-shield-check"></i> 許認可情報</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-3">
              <table class="table table-borderless">
                <tr>
                  <th class="text-muted">許可有無</th>
                  <td>
                    <% if (agency.license_status === 'have') { %>
                    <span class="badge bg-success">あり</span>
                    <% } else { %>
                    <span class="badge bg-secondary">なし</span>
                    <% } %>
                  </td>
                </tr>
              </table>
            </div>
            <div class="col-md-3">
              <table class="table table-borderless">
                <tr>
                  <th class="text-muted">許可種別</th>
                  <td><%= agency.license_type || '未設定' %></td>
                </tr>
              </table>
            </div>
            <div class="col-md-3">
              <table class="table table-borderless">
                <tr>
                  <th class="text-muted">許可番号</th>
                  <td><%= agency.license_number || '未設定' %></td>
                </tr>
              </table>
            </div>
            <div class="col-md-3">
              <table class="table table-borderless">
                <tr>
                  <th class="text-muted">許可証データ</th>
                  <td>
                    <% if (agency.license_file_path) { %>
                    <a
                      href="<%= agency.license_file_path %>"
                      target="_blank"
                      class="text-decoration-none"
                    >
                      <i class="bi bi-file-earmark-pdf"></i> 表示
                    </a>
                    <% } else { %> 未設定 <% } %>
                  </td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!-- 連携ID -->
      <div class="card mb-4 shadow-sm">
        <div class="card-header bg-secondary text-white">
          <h5 class="mb-0"><i class="bi bi-link-45deg"></i> 連携ID</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <table class="table table-borderless">
                <tr>
                  <th class="text-muted">LINE公式アカウントID</th>
                  <td><%= agency.line_official_id || '未設定' %></td>
                </tr>
              </table>
            </div>
            <div class="col-md-6">
              <table class="table table-borderless">
                <tr>
                  <th class="text-muted">代表Gmail</th>
                  <td><%= agency.representative_gmail || '未設定' %></td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
