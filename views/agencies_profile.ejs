<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>代理店プロフィール - 代理店管理システム</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css"
    />
  </head>
  <body class="container py-5">
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4 rounded">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">代理店管理システム</a>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <% if (typeof session !== 'undefined' && session && session.user &&
            session.user.role === 'admin') { %>
            <li class="nav-item">
              <a class="nav-link" href="/agencies/list">代理店一覧</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/sales/list">売上管理</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/groups/list">グループ管理</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/api/users/list">アカウント管理</a>
            </li>
            <% } %> <% if (typeof session !== 'undefined' && session &&
            session.user && session.user.role === 'agency') { %>
            <li class="nav-item">
              <a class="nav-link text-warning" href="/auth/promote"
                >管理者・役員に切り替え</a
              >
            </li>
            <% if (session.user.agency_id) { %>
            <li class="nav-item">
              <a
                class="nav-link"
                href="/agencies/profile/<%= session.user.agency_id %>"
                >マイプロフィール</a
              >
            </li>
            <% } %>
            <li class="nav-item">
              <a class="nav-link" href="/sales/list">売上管理</a>
            </li>
            <% if (session.user.agency_id) { %>
            <li class="nav-item">
              <a
                class="nav-link"
                href="/materials/<%= session.user.agency_id %>"
                >商品資料格納庫</a
              >
            </li>
            <% } %> <% } %> <% if (typeof session !== 'undefined' && session &&
            session.user && (session.user.role === 'admin')) { %> <% } %> <% if
            (typeof session !== 'undefined' && session && session.user) { %>
            <li class="nav-item">
              <a class="nav-link" href="/auth/logout">ログアウト</a>
            </li>
            <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/auth/login">ログイン</a>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="card shadow-sm p-4 mb-4">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><%= agency.name %>のプロフィール</h1>
        <div>
          <a
            href="/agencies/profile/<%= agency.id %>/edit"
            class="btn btn-primary"
            >編集</a
          >
          <% if (session.user.role === 'admin') { %>
          <a href="/agencies/list" class="btn btn-secondary ms-2">一覧へ戻る</a>
          <% } %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="card h-100">
            <div class="card-header">
              <h5 class="mb-0">基本情報</h5>
            </div>
            <div class="card-body">
              <table class="table table-borderless">
                <tr>
                  <th class="text-muted" style="width: 40%">ID</th>
                  <td><%= agency.id %></td>
                </tr>
                <tr>
                  <th class="text-muted">名前</th>
                  <td><%= agency.name %></td>
                </tr>
                <tr>
                  <th class="text-muted">年齢</th>
                  <td><%= agency.age ? agency.age + '歳' : '未設定' %></td>
                </tr>
                <tr>
                  <th class="text-muted">住所</th>
                  <td><%= agency.address || '未設定' %></td>
                </tr>
                <tr>
                  <th class="text-muted">経験年数</th>
                  <td>
                    <%= agency.experience_years ? agency.experience_years + '年'
                    : '未設定' %>
                  </td>
                </tr>
                <tr>
                  <th class="text-muted">グループ</th>
                  <td><%= agency.group_name || '未設定' %></td>
                </tr>
              </table>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card h-100">
            <div class="card-header">
              <h5 class="mb-0">契約情報</h5>
            </div>
            <div class="card-body">
              <table class="table table-borderless">
                <tr>
                  <th class="text-muted" style="width: 40%">契約日</th>
                  <td><%= agency.contract_date || '未設定' %></td>
                </tr>
                <tr>
                  <th class="text-muted">活動開始日</th>
                  <td><%= agency.start_date || '未設定' %></td>
                </tr>
                <tr>
                  <th class="text-muted">振込先情報</th>
                  <td>
                    <% if (agency.bank_info) { %>
                    <pre
                      class="mb-0"
                      style="white-space: pre-wrap; font-family: inherit"
                    >
<%= agency.bank_info %></pre
                    >
                    <% } else { %> 未設定 <% } %>
                  </td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-md-6">
          <div class="card h-100">
            <div class="card-header">
              <h5 class="mb-0">取り扱い商品</h5>
            </div>
            <div class="card-body">
              <% if (agency.product_names && agency.product_names.length > 0) {
              %>
              <div class="d-flex flex-wrap gap-2">
                <% agency.product_names.forEach(product => { %>
                <span class="badge bg-primary"><%= product %></span>
                <% }) %>
              </div>
              <% } else { %>
              <p class="text-muted mb-0">未設定</p>
              <% } %>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card h-100">
            <div class="card-header">
              <h5 class="mb-0">商品の特徴</h5>
            </div>
            <div class="card-body">
              <% if (agency.product_features) { %>
              <p class="mb-0"><%= agency.product_features %></p>
              <% } else { %>
              <p class="text-muted mb-0">未設定</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0">クイックアクション</h5>
            </div>
            <div class="card-body">
              <div class="d-flex gap-2 flex-wrap">
                <a href="/sales/list" class="btn btn-outline-primary"
                  >売上管理</a
                >
                <a
                  href="/materials/<%= agency.id %>"
                  class="btn btn-outline-success"
                  >商品資料格納庫</a
                >
                <% if (session.user.role === 'admin') { %>
                <a
                  href="/agencies/edit/<%= agency.id %>"
                  class="btn btn-outline-secondary"
                  >管理者編集</a
                >
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
